{
  "compilerOptions": {
    "target": "es6",
    // "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./src/app",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noEmitOnError": true
  },
  "include": [
    "./src"
  ]
}
